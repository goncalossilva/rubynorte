= form_for @talk do |f|
  -if @talk.errors.any?
    #error_explanation
      %h2= "#{pluralize(@talk.errors.count, "error")} prohibited this talk from being saved:"
      %ul
        - @talk.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :person
    = f.text_field :person
  .field
    = f.label :title
    = f.text_field :title
  .field
    = f.label :summary
    = f.text_area :summary
  .field
    = f.label :accepted
    = f.check_box :accepted
  .actions
    = f.submit 'Save'
